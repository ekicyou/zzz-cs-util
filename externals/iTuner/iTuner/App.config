<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="iTuner.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
  </configSections>
  <appSettings>

    <!--
    AppLogEnabled is set to either "True" or "False", indicating if the general app
    log is created to record basic operations such as cleaning and lyric discovery.
    The log is something like: "C:\Users\steven\AppData\River Software\iTuner\iTuner.log"
    -->
    <add key="AppLogEnabled" value="True"/>

    <!--
    LogFile may specify the path of a file to which is written diagnostic information.
    If this entry does not exist, no log file is created.
    -->
    <add key="LogFile" value="C:\iTuner\iTuner.log"/>

    <!--
    LibraryMode may specify "Debug", in which case the librarian remains active and records
    its intentions but does not actually carry out those intentions.  If this entry does not
    exist or is set to another value, the Librarian fully performs its duties.
    -->
    <add key="LibraryMode" value=""/>

    <!--
    Scanners may be enabled or disabled by name.  By default all scanners are enabled but can
    be disabled by setting their value to "False".  This is overridden by user settings.
    -->
    <add key="DuplicateScanner" value="True"/>
    <add key="FileWatchScanner" value="True"/>
    <add key="MaintenanceScanner" value="True"/>
    <add key="PhantomScanner" value="True"/>

    <!--
    DnsKey specifies the key used for genpuid.  If not specified here, a default
    anonymous key is used (e4230822bede81ef71cde723db743e27).
    -->
    <!--add key="DnsKey" value="e4230822bede81ef71cde723db743e27" /-->

  </appSettings>
  <userSettings>
    <iTuner.Properties.Settings>
      <setting name="PlayerPlaylist" serializeAs="String">
        <value>Library</value>
      </setting>
      <setting name="PlayerTrackID" serializeAs="String">
        <value>0</value>
      </setting>
      <setting name="ExportEncoder" serializeAs="String">
        <value>MP3</value>
      </setting>
      <setting name="ExportPlaylistFormat" serializeAs="String">
        <value>M3U</value>
      </setting>
      <setting name="ExportLocation" serializeAs="String">
        <value>C:\ExportedMusic</value>
      </setting>
      <setting name="ExportSubdirectories" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="DuplicateScannerIsEnabled" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="FileWatchScannerIsEnabled" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="MaintenanceScannerIsEnabled" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="PhantomScannerIsEnabled" serializeAs="String">
        <value>True</value>
      </setting>
    </iTuner.Properties.Settings>
  </userSettings>
</configuration>